{
  "name": "ReactNativeDemo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm start --reset-cache",
    "dev:all": "npm run dev:ios && npm run dev:android",
    "dev:ios": "react-native run-ios --port 8081 -simulator 'iPhone X'",
    "dev:android": "react-native run-android",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "build:ios": "react-native bundle --entry-file index.js --platform ios --bundle-output ./ios/react.bundle",
    "build:android": "cd android && ./gradlew assembleRelease",
    "test": "jest",
    "lint": "eslint app --fix",
    "release:android": "cd android && ./gradlew installRelease",
    "format": "find app -name '*.js' | xargs prettier --write --single-quote"
  },
  "dependencies": {
    "native-base": "^2.8.1",
    "react": "16.6.0-alpha.8af6728",
    "react-native": "0.57.4",
    "react-native-axios": "^0.17.1",
    "react-native-debugger-open": "^0.3.17",
    "react-native-elements": "^0.19.1",
    "react-native-linear-gradient": "^2.4.3",
    "react-native-modalbox": "^1.6.0",
    "react-native-root-toast": "^3.0.1",
    "react-native-router-flux": "^4.0.5",
    "react-native-spinkit": "^1.1.1",
    "react-native-stretchy": "^2.0.1",
    "react-native-vector-icons": "^6.0.2",
    "react-navigation": "^2.18.2",
    "react-redux": "^5.1.0",
    "redux": "^4.0.1",
    "redux-actions": "^2.6.4",
    "redux-devtools": "^3.4.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^23.6.0",
    "metro-react-native-babel-preset": "0.49.0",
    "moment": "^2.23.0",
    "prettier": "^1.15.2",
    "react-native-image-picker": "^0.27.1",
    "react-native-storage": "^0.2.3",
    "react-native-webview": "^2.14.3",
    "react-test-renderer": "16.6.0-alpha.8af6728"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "(node_modules)/(?!react-native|parse)"
    ],
    "transform": {
      "^.+\\.js$": "node_modules/babel-jest"
    }
  }
}
